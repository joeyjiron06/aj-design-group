---
import '../styles/index.css'
import Header from '~/components/header.astro'
import Footer from '~/components/footer.astro'

interface Props {
  title: string
  description: string
  headingVariant?: 'transparent' | 'default'
}

const { title, description, headingVariant = 'default' } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='title' content={title} />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/png' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>

    <link
      href='https://api.fontshare.com/v2/css?f[]=amulya@400,500,700,1&f[]=general-sans@400,500,600,700,1&display=swap'
      rel='stylesheet'
    />
    <!-- <link
      href='https://api.fontshare.com/v2/css?f[]=hind@400&f[]=teko@600&display=swap'
      rel='stylesheet'
    /> -->

    <!-- <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap'
      rel='stylesheet'
    /> -->

    <script
      defer
      data-domain='ajdesigngroup.net'
      src='https://plausible.io/js/script.tagged-events.js'></script>
  </head>
  <body>
    <Header variant={headingVariant} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
